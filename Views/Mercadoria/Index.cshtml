@model IEnumerable<Vendas.Models.Mercadoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Mercadoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade_Mercadoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Mercadoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Mercadoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade_Mercadoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Mercadoria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
